<!DOCTYPE html>
<html>
  <head>
    <title>Lynterest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = { 
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>
    <script>
      window.logoUrl = "<%= image_url("logo.png") %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
