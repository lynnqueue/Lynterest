<!DOCTYPE html>
<html>
  <head>
    <title>Lynterest</title>
    <%= favicon_link_tag asset_path('lynterest_icon.png') %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script
      src="https://use.fontawesome.com/releases/v5.11.2/js/all.js"
      data-auto-a11y="true"
      data-auto-replace-svg="nest"
    ></script>
    <script>
      window.logoUrl = "<%= image_url("lynterest_icon.png") %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
